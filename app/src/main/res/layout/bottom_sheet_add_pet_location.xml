<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Agregar localizacion mascota"
                    android:textSize="18sp" />




                <Button
                    android:id="@+id/button_dismiss"
                    android:layout_width="45dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:drawableBottom="@android:drawable/ic_menu_close_clear_cancel"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/verde"/>






                <EditText
                    android:id="@+id/txtTexto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DESCRIPCION MSCOTA"
                    android:inputType="textMultiLine" />






                <Button
                    android:id="@+id/button_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subir Imagen"
                    />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/verde"/>


                <Button
                    android:id="@+id/buttonUploadPet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_button_blue"
                    android:textAllCaps="false"
                    android:text="Subir LocalizaciÃ³n Mascota"
                    android:textColor="#ffffff"
                    android:textSize="15dp"/>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

